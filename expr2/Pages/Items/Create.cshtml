@page
@model expr2.Pages.Items.CreateModel

@{
    ViewData["Title"] = "创建物品";
}


<h1>创建物品</h1>

<h4>物品信息</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item.ItemName" class="control-label"></label>
                <input asp-for="Item.ItemName" class="form-control" />
                <span asp-validation-for="Item.ItemName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Item.CategoryId" class="control-label"></label>
                <br />
                <select asp-for="Item.CategoryId" asp-items="Model.Categories" class="form-control">
                </select>
                <span asp-validation-for="Item.CategoryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Item.Origin" class="control-label"></label>
                <br />
                <select asp-for="Item.Origin" asp-items="Model.Origins" class="form-control">
                </select>
                <span asp-validation-for="Item.Origin" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Item.Specification" class="control-label"></label>
                <input asp-for="Item.Specification" class="form-control" />
                <span asp-validation-for="Item.Specification" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Item.Model" class="control-label"></label>
                <input asp-for="Item.Model" class="form-control" />
                <span asp-validation-for="Item.Model" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Item.ItemImage" class="control-label"></label>
                <br/>
                <input asp-for="UploadedImage" type="file" accept="image/png, image/jpeg, image/bmp" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="创建" style="font-size:16px;padding:8px;" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">回到列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
