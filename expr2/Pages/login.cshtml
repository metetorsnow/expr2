@page
@model expr2.Pages.loginModel
@{
    ViewData["Title"] = "登录";
}

<!DOCTYPE html>
<html>
<head>
    <title>登录</title>
    <style>
        .c {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50vh;
        }

        form {
            width: 300px;
            
        }
    </style>
    <!-- Import style -->
    <link rel="stylesheet" href="//unpkg.com/element-plus/dist/index.css" />
    <!-- Import Vue 3 -->
    <script src="//unpkg.com/vue@3"></script>
    <!-- Import component library -->
    <script src="//unpkg.com/element-plus"></script>
    <script lang="ts" setup>
        const { ElNotification } = ElementPlus

    </script>
</head>
<body>
    <h1>用户登录</h1>
    <div class="c">
    <form method="post">
        <div class="form-group">
            <label class="control-label">用户ID:</label>
                <input type="text" asp-for="Username" class="form-control" style="padding: 12px;margin:12px;" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">密码:</label>
                <input type="password" asp-for="Password" class="form-control" style="padding: 12px;margin:12px;" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
                <input type="submit" value="登录" style="padding: 12px;margin:12px;" />
        </div>
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <script>
                    ElNotification({
                        title: '错误',
                        message: '用户名或密码错误',
                        type: 'error',
                        duration: 2000
                    })
            </script>
        }
    </form>
        <div />
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
